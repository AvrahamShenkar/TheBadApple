<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="520dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:layoutDirection="ltr"
    android:background="@drawable/settingsstyle">

    <ImageView
        android:id="@+id/exit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/badapple_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/bad_apple_text" />


    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badapple_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Game Version: 1"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
    android:id="@+id/expl_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/version_text"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:text="We are two students at Shenkar Collage, developing android application as a final project of an Android course"
    android:textAlignment="center"
    android:textSize="25dp" />

    <TextView
        android:id="@+id/names_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expl_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Names: Chen Shavit, Lahmi Avraham"
        android:textAlignment="center"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/sound_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/names_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Â© The Department of Software Engineering, Shenkar - Collage of Engineering, Design and Art"
        android:textAlignment="center"
        android:textSize="18dp" />



</RelativeLayout>
