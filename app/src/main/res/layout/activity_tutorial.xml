<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="520dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@drawable/settingsstyle">

    <ImageView
        android:id="@+id/exit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/exit" />


    <ImageView
        android:id="@+id/tutorial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layoutDirection="ltr"
        app:srcCompat="@drawable/tutorial_text" />


    <TextView
        android:id="@+id/sound_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/Music_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/tutorial_title"

        android:text="All you have to do in order to satisfy this Hungry Worm,       is to eat as many Apple seeds       as you can!
But be careful! This apple may be pested!
For this, please avoid hitting on the apples skin       , and the Pest-Control spray-cans.
"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/wormImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorial_title"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="75dp"
        android:layout_toLeftOf="@+id/exit_image"
        android:layout_toStartOf="@+id/exit_image"
        app:srcCompat="@drawable/small_worm" />


    <ImageView
        android:id="@+id/seedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/skinImage"
        android:layout_alignStart="@+id/skinImage"
        android:layout_below="@+id/wormImage"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/small_seed" />

    <ImageView
        android:id="@+id/skinImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sound_text"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sound_text"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        app:srcCompat="@drawable/small_skin" />

    <ImageView
        android:id="@+id/pestImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/exit_image"
        android:layout_toStartOf="@+id/exit_image"
        app:srcCompat="@drawable/small_posion" />


</RelativeLayout>
